---
import Main from "../components/Main.astro";
import Layout from "../layouts/Layout.astro";
import ClientLogos from "../components/ClientLogos.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import AboutUs from "../components/AboutUs.astro";
import Counts from "../components/Counts.astro";
import Services from "../components/Services.astro";
import OurProcess from "../components/OurProcess.astro";
import CoreFeatures from "../components/CoreFeatures.astro";
import ContactUs from "../components/ContactUs.astro";
import Footer from "../components/Footer.astro";
---

<Layout>
   <Header />
  <Main>
    <Hero />
  </Main>
  <ClientLogos />
  <Main>
    <AboutUs />
    <Counts />
    <Services />
    <OurProcess />
    <CoreFeatures />
    <ContactUs />
  </Main>
  <Footer />
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  img,
  video {
    max-width: 100%;
    height: auto;
  }
  body {
    font-family: "Open Sans", sans-serif;
  }
</style>
