---
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
---

<header
  id="header"
  class="fixed py-5 flex items-center top-0 left-0 right-0 z-50"
>
  <nav class="lg:flex justify-between items-center mx-auto container">
    <Astronav closeOnClick>
      <div class="flex px-2 w-full lg:w-auto justify-between items-center">
        <div class="logo">
          <h1>
            <a href="/" class="flex items-center raleway-font">
              <img src="/src/content/posts/images/logo.png" alt="" />
              AKESHYA
            </a>
          </h1>
        </div>

        <div class="block lg:hidden">
          <MenuIcon class="w-6 h-6 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden lg:flex px-2">
        <ul class="flex flex-col lg:flex-row lg:gap-5">
          <li><a href="#hero">Home</a></li>
          <li><a href="#about">About</a></li>
          <li><a href="#services">Services</a></li>
          <li><a class="contact-info" href="#contact">Contact us</a></li>
        </ul>
      </MenuItems>
    </Astronav>
  </nav>
</header>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const selectHeader = document.querySelector("#header");

    if (selectHeader) {
      const headerScrolled = () => {
        if (window.scrollY > 100) {
          selectHeader.classList.add("header-scrolled");
        } else {
          selectHeader.classList.remove("header-scrolled");
        }
      };

      window.addEventListener("load", headerScrolled);
      window.addEventListener("scroll", headerScrolled);
    }
  });
</script>

<style>
  header {
    transition: all 0.5s;
    background: #fff;
  }
  nav ul li a {
    font-size: 15px;
    line-height: 23px;
  }
  .raleway-font {
    font-family: "Raleway", sans-serif;
  }
  .contact-info {
    background: #14279b;
    padding: 8px 25px;
    border-radius: 50px;
    color: #fff;
  }
  .logo {
    img {
      padding-bottom: 5px;
      margin: 0;
      max-height: 70px;
    }
    a {
      color: #14279b;
    }
    h1 {
      font-size: 30px;
      margin: 0;
      padding: 0;
      line-height: 1;
      font-weight: 700;
      letter-spacing: 1px;
    }
  }
  .header-scrolled {
    box-shadow: 0px 2px 15px rgba(0, 0, 0, 0.1);
    padding: 12px 0;
  }
  @media (max-width: 768px) {
    ol,
    ul,
    li {
      margin: 10px 0;
    }
  }
</style>
