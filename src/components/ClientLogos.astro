---
import Main from "./Main.astro";
---

<section class="client-logos">
  <Main>
    <div class="flex flex-wrap">
      <div class="lg:w-1/6 md:w-1/3 w-1/2 w-full shrink-0 logo-box">
        <img
          data-aos="zoom-in"
          class="max-w-full h-auto"
          src="/src/content/posts/images/client-1.png"
          alt="Client 1"
        />
      </div>
      <div class="lg:w-1/6 md:w-1/3 w-1/2 w-full shrink-0 logo-box">
        <img
          data-aos="zoom-in"
          class="max-w-full h-auto"
          src="/src/content/posts/images/client-2.png"
          alt="Client 2"
        />
      </div>
      <div class="lg:w-1/6 md:w-1/3 w-1/2 w-full shrink-0 logo-box">
        <img
          data-aos="zoom-in"
          class="max-w-full h-auto"
          src="/src/content/posts/images/client-3.png"
          alt="Client 3"
        />
      </div>
      <div class="lg:w-1/6 md:w-1/3 w-1/2 w-full shrink-0 logo-box">
        <img
          data-aos="zoom-in"
          class="max-w-full h-auto"
          src="/src/content/posts/images/client-4.png"
          alt="Client 4"
        />
      </div>
      <div class="lg:w-1/6 md:w-1/3 w-1/2 w-full shrink-0 logo-box">
        <img
          data-aos="zoom-in"
          class="max-w-full h-auto"
          src="/src/content/posts/images/client-5.png"
          alt="Client 5"
        />
      </div>
      <div class="lg:w-1/6 md:w-1/3 w-1/2 w-full shrink-0 logo-box">
        <img
          data-aos="zoom-in"
          class="max-w-full h-auto"
          src="/src/content/posts/images/client-6.png"
          alt="Client 6"
        />
      </div>
    </div>
  </Main>
</section>

<style>
  .client-logos {
    background-color: #f3f9fd;
  }

  .client-logos img {
    width: 50%;
    filter: grayscale(100%);
    transition: all 0.4s ease-in-out;
    display: inline-block;
    padding: 10px 0;
  }

  .client-logos img:hover {
    filter: grayscale(0%);
  }

  .logo-box {
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>
